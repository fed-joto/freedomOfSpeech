html(lang="en")
  head
    meta(charset="UTF-8")
    title= title
    link(rel="stylesheet" href="./dist/index.css")

  body
    .search-box
      input(type="text" placeholder="Search for a country...")
      .search-result
        ul.search-box__autocomplete

    aside.about
