  "devDependencies": {
    "autoprefixer-core": "^6.0.1",
    "babel-cli": "^6.24.1",
    "babel-preset-babili": "0.0.12",
    "babel-preset-es2015": "^6.24.1",
    "browser-sync": "^2.18.8",
    "node-sass": "^4.5.2",
    "npm-run-all": "^4.0.2",
    "onchange": "^3.2.1",
    "postcss-cli": "^3.2.0"
  },
  "dependencies": {
